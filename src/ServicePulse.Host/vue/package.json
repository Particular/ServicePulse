{
  "name": "service-pulse",
  "version": "1.0.0",
  "description": "Production monitoring for distributed systems.",
  "main": "index.html",
  "scripts": {
    "dev": "npm run lint && vite",
    "build": "npm run lint && vite build",
    "preview": "npm run lint && vite preview",
    "test:unit": "npm run lint && vitest --environment jsdom --root src/",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix",
    "storybook": "storybook dev -p 6006",
    "storybook-dont-auto-open": "storybook dev -p 6006 --no-open",
    "build-storybook": "storybook build",
    "test-storybook": "test-storybook",
    "test:component": "vitest run ./src",
    "test:coverage": "vitest run --coverage",
    "test:application:playwright": "npx playwright test",
    "test:application:vitest": "npx vitest run ./test/specs",
    "test:application": "npm run test:application:vitest"
  },
  "dependencies": {
    "@tsconfig/node18": "^18.2.2",
    "@vue/tsconfig": "^0.5.1",
    "bootstrap": "^5.2.0",
    "bootstrap-icons": "^1.10.3",
    "d3": "^7.6.1",
    "highlight.js": "^11.6.0",
    "moment": "^2.29.4",
    "pinia": "^2.1.7",
    "vue": "^3.3.4",
    "vue-highlight-code": "^0.1.16",
    "vue-router": "^4.2.5",
    "vue-toastification": "^2.0.0-rc.5",
    "vue3-cookies": "^1.0.6",
    "vue3-simple-typeahead": "^1.0.11"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.1",
    "@rushstack/eslint-patch": "^1.7.0",
    "@storybook/addon-a11y": "^7.5.3",
    "@storybook/addon-actions": "^7.6.2",
    "@storybook/addon-essentials": "^7.5.3",
    "@storybook/addon-interactions": "^7.6.5",
    "@storybook/addon-links": "^7.5.3",
    "@storybook/blocks": "^7.5.3",
    "@storybook/jest": "^0.2.3",
    "@storybook/test-runner": "^0.16.0",
    "@storybook/testing-library": "^0.2.2",
    "@storybook/vue3": "^7.5.3",
    "@storybook/vue3-vite": "^7.5.3",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.3.0",
    "@testing-library/user-event": "^14.5.2",
    "@testing-library/vue": "^8.0.1",
    "@types/node": "^20.11.5",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vitest/coverage-v8": "^1.2.1",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/test-utils": "^2.1.0",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.20.1",
    "jsdom": "^20.0.3",
    "msw": "^2.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.3",
    "storybook": "^7.5.3",
    "storybook-vue3-router": "^4.25.0",
    "vite": "^5.0.12",
    "vitest": "^1.2.1"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
