{
  "name": "service-pulse",
  "version": "1.0.0",
  "description": "Production monitoring for distributed systems.",
  "main": "index.html",
  "scripts": {
    "dev": "npm run lint && vite",
    "build": "npm run lint && vite build",
    "preview": "npm run lint && vite preview",
    "test:unit": "npm run lint && vitest --environment jsdom --root src/",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs",
    "test:component": "vitest run ./src",
    "test:coverage": "vitest run --coverage",
    "test:application:playwright": "npx playwright test",        
    "test:application:vitest": "npx vitest run ./test/specs",
    "test:application": "npm run test:application:vitest"
  },
  "dependencies": {
    "bootstrap": "^5.2.0",
    "bootstrap-icons": "^1.10.3",
    "d3": "^7.6.1",
    "highlight.js": "^11.6.0",
    "moment": "^2.29.4",
    "vue": "^3.2.41",
    "vue-highlight-code": "^0.1.16",
    "vue-router": "^4.1.5",
    "vue-toastification": "^2.0.0-rc.5",
    "vue3-cookies": "^1.0.6",
    "vue3-simple-typeahead": "^1.0.11"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.1",
    "@rushstack/eslint-patch": "^1.7.0",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@testing-library/vue": "^8.0.1",
    "@types/node": "^20.11.5",
    "@vitejs/plugin-vue": "^3.1.2",
    "@vitest/coverage-v8": "^1.2.1",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/test-utils": "^2.1.0",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.20.1",
    "jsdom": "^20.0.3",
    "msw": "^2.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.3",
    "vite": "^3.1.8",
    "vitest": "^1.2.1"
  }
}
