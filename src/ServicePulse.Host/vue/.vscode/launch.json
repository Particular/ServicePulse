{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "chrome",
        "request": "launch",
        "name": "Attach Vue on Docker Port",
        "url": "http://localhost:1331",
        "webRoot": "${workspaceFolder}/src",
        "sourceMapPathOverrides": {
            "webpack:///./~/*": "${webRoot}/node_modules/*", 
            "webpack:///node_modules/*": "${webRoot}/node_modules/*",
            "webpack:///src/*": "${webRoot}*",
            "webpack:///*":     "../*" 
        },
        "sourceMaps": true,
        "runtimeArgs": ["--remote-debugging-port=9222"]
      },
      {
        "type": "chrome",
        "request": "launch",
        "name": "Attach Vite App",
        "url": "http://localhost:5173",
        "webRoot": "${workspaceFolder}/src",  
        "sourceMapPathOverrides": {
            "webpack:///./~/*": "${webRoot}/node_modules/*", 
            "webpack:///node_modules/*": "${webRoot}/node_modules/*",
            "webpack:///src/*": "${webRoot}*",
            "webpack:///*":     "../*" 
        },
        "sourceMaps": true,
        "runtimeArgs": ["--remote-debugging-port=9222"]
      },      
      {
        "name": "Storybook Debug with Chrome",
        "type": "node-terminal",
        "request": "launch",
        "command": "npm run storybook",
        "cwd": "${workspaceFolder}",        
        "internalConsoleOptions": "openOnFirstSessionStart",
        "serverReadyAction": {
          "pattern": "Local:.+(https?://[^:]+:[0-9]+)",
          "uriFormat": "%s",
          "action": "debugWithChrome"
        }
      },      
    ]
  }