<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net48</TargetFramework>
    <OutputType>Exe</OutputType>
    <IsPackable>false</IsPackable>
    <GenerateDocumentationFile>false</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="System.Configuration.Install" />
    <Reference Include="System.ServiceProcess" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNet.WebApi.Owin" Version="5.2.9" />
    <PackageReference Include="Microsoft.Owin.SelfHost" Version="4.2.2" />
    <PackageReference Include="Particular.Packaging" Version="2.2.0" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="angular\app\modules\shell\js\services\service.auditLog.js" />
    <Content Include="angular\app\js\polyfill\array.prototype.includes.js" />
    <Content Include="angular\app\modules\configuration\connectionsManager.js" />
    <Content Include="angular\app\js\views\sc_not_available.html" />
    <Content Include="angular\app\modules\configuration\js\connections\connections.controller.js" />
    <Content Include="angular\app\modules\configuration\js\connections\connections.module.js" />
    <Content Include="angular\app\modules\configuration\js\connections\connections.route.js" />
    <Content Include="angular\app\modules\configuration\views\connections.html" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="angular\app\**\*" />
    <EmbeddedResource Include="angular\app\**\*" LogicalName="%(RelativeDir)%(Filename)%(Extension)" />
    <EmbeddedResource Remove="angular\app\js\.eslintrc.js" />
    <None Include="angular\app\js\.eslintrc.js" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Hosting\Help.txt" />
    <EmbeddedResource Include="Hosting\Help.txt" />
  </ItemGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="PowerShell -File .\build.ps1" />
  </Target>

</Project>
